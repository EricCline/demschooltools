# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET /login	controllers.Public.index()

GET     /                         controllers.Application.index()

GET     /editToday                controllers.Application.editTodaysMinutes


GET  /viewMeeting/:id	controllers.Application.viewMeeting(id: Integer)
GET  /editMeeting/:id	controllers.Application.editMeeting(id: Integer)

GET   /personHistory/:id    controllers.Application.getPersonHistory(id: Integer)

POST /newCase	controllers.Application.createCase(id, meeting_id : Integer)
POST /saveCase   controllers.Application.saveCase(id)

POST /addPersonAtMeeting    controllers.Application.addPersonAtMeeting(meeting_id : Integer, person_id : Integer, role : Integer)
POST /removePersonAtMeeting    controllers.Application.removePersonAtMeeting(meeting_id : Integer, person_id : Integer, role : Integer)


POST /addTestifier   controllers.Application.addTestifier(case_number, person_id : Integer)
POST /removeTestifier controllers.Application.removeTestifier(case_number, person_id : Integer)

POST /addCharge   controllers.Application.addCharge(case_number)
POST /saveCharge controllers.Application.saveCharge(id : Integer)


GET /jsonPeople   controllers.Application.jsonPeople(term ?= "")
GET /jsonRules    controllers.Application.jsonRules(term ?= "")



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)




GET     /logout                     com.feth.play.module.pa.controllers.Authenticate.logout
GET     /authenticate/:provider     com.feth.play.module.pa.controllers.Authenticate.authenticate(provider: String)
GET     /authenticate/:provider/denied     controllers.Public.oAuthDenied(provider: String)
