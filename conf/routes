# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                         controllers.Public.index()

GET     /people                   controllers.Application.people()
GET     /people/new               controllers.Application.newPerson()
GET     /people/:id               controllers.Application.person(id: Integer)
POST    /people                   controllers.Application.makeNewPerson()
POST    /people/:id/delete        controllers.Application.deletePerson(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /logout                     com.feth.play.module.pa.controllers.Authenticate.logout
GET     /authenticate/:provider     com.feth.play.module.pa.controllers.Authenticate.authenticate(provider: String)
GET     /authenticate/:provider/denied     controllers.Public.oAuthDenied(provider: String)
